extends ../template
block variables
    - var title = 'Авторизация'

block content
    section.bg-auth
        .auth__form
            .auth__title
                h2.underline Авторизуйтесь
            .auth__field
                input(type="text" id="login" class="login" placeholder="Логин")
            .auth__field
                input(type="password" id="password" class="password" placeholder="Пароль")
            .checkbox
                label
                    input(type="checkbox", name="human")
                    span.chechbox__label Я человек
            .radio
                .radio__title
                    p Вы точно не робот?
                .radio__field
                    label
                        input(type="radio" name="question" value="yes" checked)
                        span.radio__label Да
                .radio__field
                    label
                        input(type="radio" name="question" value="no")
                        span.radio__label Не уверен
            .buttons
                a(href="/index.html" class="auth___btn") На главную
                a(href="" class="auth___btn") Войти
        .copyright
            p.copyright__text © Давлет Ганиев | 2017