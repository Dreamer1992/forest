extends ../template

block variables
    - var title = 'Обо мне'

block content
    section.section.hero
        ul.socials.hero__socials
            each item in ['vk', 'tw', 'in']
                li.socials__item
                    a(href=`${item}`).socials__link

        a(href="").hamburger.hero__menu

        .hero__title
            .section-title
                img.section-title__pic
            .hero__user
                .user
                    .user__pic
                        img.user__pic-img
                    .user__info
                        .user__name Давлет Ганиев
                        .user__data Личный сайт разработчика

        .hero__arrow.arrow-down

        section.section.about
            .about__left
                .about__triangle.about__triangle_left
                    svg.triangle.triangle_fill_white
                .about__left-title
                    .block-title Обо мне
                .about__left-content
                    .user-description
                        .user-description__image
                            img.user-description__avatar
                        .user-description__title
                            .block-subtitle Кто я
                        .user-description__text.text-block
                            p Я веб разработчик из Санкт-Петербурга. Мне 25 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                            P Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нем свой контент. 
            .about__right
                .about__triangle.about__triangle_right
                    svg.triangle.triangle_fill_beige
                .about__right-title.block-subtitle Чем я могу быть вам полезен
                .about__right-desc.text-block
                    p Я веб разработчик из Санкт-Петербурга. Мне 25 лет. Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                    ul.skills-list
                        each item in ['Frontend', 'Backend', 'Workflow']
                            li.skills-list__item
                                .skills-row
                                    .skills-row__title #{item}
                                    ul.skills-row__list
                                        li.skills-row__item
                                            .skill
                                                svg.skill__circle
                                                    .skill__title

        section.section
            .google-map
            .map__data
                .contancts
                    .contancts__title
                        .block-subtitle Кто я
                    ul.contacts__list
                        -
                            var contacts = [
                                ['skype', 'skype_kdn'],
                                ['vk', 'vk.com'],
                                ['tw', 'twitter.com']
                            ]
                        each item in contacts
                            li.contacts__item.contacts-row
                                .contacts-row__icon #{item[0]}
                                .contacts-row__title #{item[1]}

        footer.footer
            .footer__row
                .footer__col
                    .footer__menu
                        nav.menu
                            ul.menu__list
                                each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
                                    li.menu__item
                                        a(href="").menu__link #{item}
                .footer__col
                    .footer__socials
                        ul.socials.socials_rounded
                            each item in ['vk', 'tw', 'in']
                                li.socials__item
                                    a(href=`${item}`).socials__link
            .footer__row
                .footer__col
                    .footer__text
                        p Lorem ipsum dolor sit amet consectetur adipisicing elit. Natus voluptatum reiciendis, provident harum ipsa tempora.
                .footer__col
                    .footer__text
                        p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Assumenda, reiciendis? Assumenda totam error illum facere.